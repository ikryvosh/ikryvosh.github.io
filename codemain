<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Список справ</title>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            background-color: #eee;
            margin: 0;
            padding: 0;
        }

        ul {
            margin: 0;
            padding: 0;
            list-style-type: none;
        }

        .center {
            align-self: center;
        }

        .flow-right {
            display: flex;
            justify-content: space-around;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 10px;
            display: flex;
            flex-direction: column;
            background-color: white;
            height: 100vh;
        }

        .title, .controls, .button {
            flex: none;
        }

        .button {
            padding: 10px 20px;
        }

        .todo-list {
            flex: 1 1 0;
            margin-top: 20px;
            padding: 20px;
            overflow-y: auto;
        }

        .todo-delete {
            margin: 10px;
        }

        .todo-checkbox {
            margin: 10px;
        }

        .todo-container {
            padding: 20px;
            border-bottom: 1px solid #333;
        }

        .todo-container:first-of-type {
            border-top: 1px solid #333;
        }
    </style>
</head>
<body>
<h1>Список справ</h1>
<form id="todo-form">
    <input type="text" id="todo-input" placeholder="Додати справу">
    <button type="submit">Додати</button>
</form>
<ul id="todo-list"></ul>
<p>Загальна кількість справ: <span id="total-tasks">0</span></p>
<p>Кількість незроблених справ: <span id="incomplete-tasks">0</span></p>
<script>
    // JavaScript код тут

    // Оголошення змінних totalTasks і incompleteTasks
    let totalTasks = 0;
    let incompleteTasks = 0;

    // Функція для додавання справи
    function addTask(taskText) {
        // Створити новий елемент списку
        const listItem = document.createElement("li");
        listItem.innerText = taskText;

        // Додати кнопку для відмітки справи як виконаної
        const completeButton = document.createElement("button");
        completeButton.innerText = "Виконано";
        completeButton.addEventListener("click", completeTask);

        // Додати справу та кнопку до списку
        listItem.appendChild(completeButton);
        todoList.appendChild(listItem);

        // Збільшити загальну кількість справ та кількість незроблених справ
        totalTasks++;
        incompleteTasks++;
        updateTaskCount();

        // Зберегти дані в Local Storage
        saveTasks();
    }

    // Функція для відмітки справи як виконаної
    function completeTask() {
        // Отримати батьківський елемент (список) і зменшити кількість незроблених справ
        const listItem = this.parentNode;
        listItem.style.textDecoration = "line-through";
        incompleteTasks--;
        updateTaskCount();

        // Зберегти дані в Local Storage
        saveTasks();
    }

    // Функція для оновлення статистики
    function updateTaskCount() {
        totalTasksDisplay.textContent = totalTasks;
        incompleteTasksDisplay.textContent = incompleteTasks;
    }

    // Функція для збереження справ в Local Storage
    function saveTasks() {
        const tasks = [];
        const taskItems = document.querySelectorAll("#todo-list li");
        taskItems.forEach(function (item) {
            tasks.push(item.innerText);
        });
        localStorage.setItem("tasks", JSON.stringify(tasks));
    }

    // Отримати елементи DOM
    const todoForm = document.getElementById("todo-form");
    const todoInput = document.getElementById("todo-input");
    const todoList = document.getElementById("todo-list");
    const totalTasksDisplay = document.getElementById("total-tasks");
    const incompleteTasksDisplay = document.getElementById("incomplete-tasks");

    // Перевірка, чи є дані в Local Storage при завантаженні сторінки
    document.addEventListener("DOMContentLoaded", function () {
        const storedTasks = localStorage.getItem("tasks");
        if (storedTasks) {
            const tasks = JSON.parse(storedTasks);
            tasks.forEach(function (taskText) {
                addTask(taskText);
            });
        }
    });

    // Додати обробник подій для форми
    todoForm.addEventListener("submit", function (event) {
        event.preventDefault();
        const taskText = todoInput.value.trim();
        if (taskText !== "") {
            addTask(taskText);
            todoInput.value = "";
        }
    });
</script>
</body>
</html>
